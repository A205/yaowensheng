<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/AbsoluteLayout"
    android:background="@drawable/fengjing">

    <TextView
        android:text="体重指数计算器"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/textView" ></TextView>
    <TextView
        android:text="身高"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sg"
        android:textSize="30sp"
        android:layout_x="10dp"
        android:layout_y="90dp"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"></TextView>
    <TextView
        android:text="cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_x="300dp"
        android:layout_y="90dp"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"></TextView>

    <TextView
        android:text="体重"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tz"
        android:layout_x="12dp"
        android:layout_y="145dp"
        android:textSize="30sp"></TextView>

    <TextView
        android:text="kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_x="300dp"
        android:layout_y="145dp"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"></TextView>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入身高"
        android:textSize="30sp"
        android:ems="10"
        android:ellipsize="end"
        android:inputType="number"
        android:id="@+id/editText"
        android:layout_x="96dp"
        android:layout_y="84dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"></EditText>

    <EditText android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:hint="请输入体重"
        android:textSize="30sp"
        android:ellipsize="end"
        android:layout_x="94dp"
        android:layout_y="131dp"
        android:id="@+id/editText2"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"></EditText>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="请输入正确的身高和体重"
        android:textSize="20sp"
        android:layout_x="100dp"
        android:layout_y="200dp"
        ></TextView>

    <Button android:layout_height="82dp"
        android:layout_width="166dp"
        android:text="计算BMI"
        android:textAlignment="center"
        android:background="@drawable/fengjing"
        android:textSize="20dp"
        android:id="@+id/btn"
        android:layout_x="165dp"
        android:layout_y="428dp"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"></Button>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/show"
        android:ellipsize="end"
        android:layout_x="10dp"
        android:layout_y="300dp"
        android:textSize="20sp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:layout_x="50dp"
        android:layout_y="250dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</AbsoluteLayout>